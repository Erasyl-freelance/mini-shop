<% if (error && error.length > 0) { %>
<div class="alert error"><%= error[0] %></div>
<% } %>

<% if (success && success.length > 0) { %>
<div class="alert success"><%= success[0] %></div>
<% } %>
  
<link rel="stylesheet" href="/css/style.css">

<form action="/products/update/<%= product.id %>" method="post">
    <input type="text" name="title" value="<%= product.title %>" placeholder="Ürün adı">
    <input type="number" name="price" value="<%= product.price %>" placeholder="Fiyat">
    <textarea name="description"><%= product.description %></textarea>
    <input name="image_url" value="<%= product.image_url %>" placeholder="Resim URL">
    <input type="number" name="stock" value="<%= product.stock %>" placeholder="Stock">
    <button type="submit">Güncelle</button>
</form>
