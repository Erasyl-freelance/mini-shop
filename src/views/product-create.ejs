<% if (error && error.length > 0) { %>
<div class="alert error"><%= error[0] %></div>
<% } %>

<% if (success && success.length > 0) { %>
<div class="alert success"><%= success[0] %></div>
<% } %> 
  
<link rel="stylesheet" href="/css/style.css">

<form action="/products/create" method="post" id="productForm">
    <input type="text" name="title" placeholder="Ürün adı">
    <input name="price" placeholder="Fiyat" type="number">
    <textarea name="description"></textarea>
    <input name="image_url" placeholder="Resim URL">
    <input type="number" name="stock" placeholder="Stock">
    <button type="submit">Kaydet</button>
</form>
<script src="/js/main.js"></script>
